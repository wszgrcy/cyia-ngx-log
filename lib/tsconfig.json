{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "es5",
    "module": "commonjs",
    "lib": ["es2017", "dom"],
    "declaration": true,
    "sourceMap": true,
    "outDir": "./module/lib",
    "strict": false,
    "moduleResolution": "node",
    "typeRoots": [
      "node_modules/@types"
    ],
    /* List of folders to include type definitions from. */
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
  }
}
